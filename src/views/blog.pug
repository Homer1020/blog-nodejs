extends ./layouts/app.pug
block content 
  .container
    .columns 
      .column.is-9
        h1.title.is-4.is-uppercase.my-5 Blog #{ category || '' }
        .columns
          each post in posts 
            .column.is-4
              .card
                .card-image
                  a(href=`/publicacion/${ post.slug }`)
                    figure.image.is-4by3
                      img(src=`/files/${ post.thumbnail }`, style="object-fit: cover;")
                .card-content
                  .media
                    .media-left
                      a(href="#")
                        figure.image.is-48x48
                          img(src=`/files/${ post.User.picture }`)
                    .media-content
                      p.title.is-5
                        a(href=`/publicacion/${ post.slug }`)= post.title
                      p.subtitle.is-6
                        a(href="#")= `@${post.User.nickname}`
                  .content= post.content
                    br
                    small
                      time(datetime='2016-1-1')= helpers.getTimeAgo(post.createdAt)
      aside.column.is-3
        section.mb-5 
          h2.title.is-5.is-uppercase Buscar Publicación
          
        section
          h2.title.is-5.is-uppercase Categorías Disponibles
          nav 
            ul 
              each category in allCategories 
                li 
                  a(href=`/blog/categoria/${ category.name }`)= category.displayName
              li 
                a(href="/blog") Sin Categoría